        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
